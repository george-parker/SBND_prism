BEGIN_PROLOG

hitdumper:
{
    module_type:              "HitDumper"

    MaxHits: 100000
    MaxOpHits: 100000
    MaxSamples: 5001
    MaxCRTHits: 5000
    MaxCRTTracks: 10

    DigitModuleLabel:         "daq"
    HitsModuleLabel:          "fasthit"
    OpHitsModuleLabel:        "ophit"
    CRTHitModuleLabel:        "crthit"
    CRTStripModuleLabel:      "crt"
    CRTTrackModuleLabel:      "crttrack"
    GenieGenModuleLabel:      "generator"

    keepCRThits:              true
    keepCRTstrips:            false
    makeCRTtracks:            true
    readCRTtracks:            true
    readOpHits:               true
    readTruth:                true
    savePOTinfo:              true
    checkTransparency:        false

    window:                   100

    KeepTaggerTypes:          [0, 1, 2, 3, 4, 5, 6]
}

END_PROLOG
